<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageview_list_item_userImage"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <TextView
        android:id="@+id/textview_list_item_displayname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display Name"
        android:textSize="20dp"
        android:textColor="@color/colorPrimary"
        android:layout_toRightOf="@+id/imageview_list_item_userImage"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"/>
    <TextView
        android:id="@+id/textview_list_item_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_toRightOf="@+id/imageview_list_item_userImage"
        android:layout_below="@+id/textview_list_item_displayname"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"/>

    <ImageView
        android:id="@+id/imageview_list_item_status_light"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@+id/textview_list_item_displayname"
        app:srcCompat="?attr/colorAccent"
        android:visibility="invisible"/>
</RelativeLayout>