<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <include layout="@layout/app_bar_layout" android:id="@+id/main_page_toolbar"/>

    <TextView
        android:id="@+id/start_display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/main_page_toolbar"
        android:text="Display Name" />

    <TextView
        android:id="@+id/start_welcome_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Welcome to IST Chat"
        app:layout_constraintTop_toBottomOf="@id/start_display_name"/>

    <Button
        android:id="@+id/btn_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="SIGN IN"
        app:layout_constraintTop_toBottomOf="@id/start_welcome_msg"
        android:theme="@style/PrimaryFlatButton"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="REGISTER"
        app:layout_constraintTop_toBottomOf="@id/btn_sign_in"
        android:id="@+id/btn_start_to_register_activity"
        android:theme="@style/PrimaryFlatButton"
        />
</android.support.constraint.ConstraintLayout>